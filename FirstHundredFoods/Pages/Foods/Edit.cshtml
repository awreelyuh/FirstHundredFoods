@page
@using FirstHundredFoods.Models;
@model FirstHundredFoods.Pages.Foods.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Food</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Food.ID" />
            <div class="form-group">
                <label asp-for="Food.Name" class="control-label"></label>
                <input asp-for="Food.Name" class="form-control" />
                <span asp-validation-for="Food.Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Food.ContainsAllergen" /> @Html.DisplayNameFor(model => model.Food.ContainsAllergen)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Food.FoodType" class="control-label"></label>
                <select asp-for="Food.FoodType" asp-items="Html.GetEnumSelectList<FoodType>()">
                    <option value="">&lt;Select&gt;</option>
                </select>
                <span asp-validation-for="Food.FoodType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
